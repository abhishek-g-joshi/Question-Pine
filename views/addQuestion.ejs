<%- include("partials/header.ejs") -%>

<div class="login-form">
    <form action="/addQuestion" method="POST">
            <h2 class="text-center">Add Question</h2>
            <div class="form-group">
            	<input type="text" class="form-control" name="quesName" placeholder="Question Name" required>
            </div>
    		<div class="form-group">
            <input type="url" class="form-control" name="quesLink" placeholder="Question Link" required>
        </div>

        <div class="form-group">
            <select type="text" class="form-control" name="quesType" placeholder="Question Type" required >
                <option value="" disabled selected hidden>Question Type</option>
                <option value="Array">Array</option>
                <option value="String">String</option>
                <option value="Matrix">Matrix</option>
                <option value="Linked List">Linked List</option>
                <option value="Stack">Stack</option>
                <option value="Queue">Queue</option>
                <option value="Tree">Tree</option>
                <option value="Graph">Graph</option>
                <option value="Greedy">Greedy</option>
                <option value="Backtracking">Backtracking</option>
                <option value="Recursion">Recursion</option>
                <option value="Dynamic Programing">Dynamic Programing</option>
                <option value="Bit Manipulation">Bit Manipulation</option>
                <option value="Hash Table">Hash Table</option>
                <option value="Sort">Sort</option>
                <option value="Searching">Searching</option>
                <option value="Map">Map</option>
                <option value="Segment Tree">Segment Tree</option>
            </select>
        </div>
