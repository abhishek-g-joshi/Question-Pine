<%- include("partials/header.ejs") -%>

<div class="container">
    <header class="jumbotron">
      <form action="/discussion/<%=user.userName%>/<%=discussionID%>/removeall" method="POST">
        <button type="submit" class="btn btn-danger" style="float: right;"><span class="glyphicon glyphicon-minus"></span> Remove All</button>
    </form>
      <h3 class="about-section"><b>Discussion : <%=name%></b></h3>
      <div>
        <br/>
      <form action="/discussion" method="GET" class="form-inline">
        <div class="form-group" style="float: right;">
          <input type="text" name="search" placeholder="Search a Group..." class="search-form-control">
          <input type="submit" value="search" class="btn btn-default btn-primary">
        </div>
      </form>
      <form action="/discussion/<%=user.userName%>/<%=discussionID%>/open" method="GET">
        <button type="submit" class="btn btn-primary" style="float: left;"><span class="glyphicon glyphicon-arrow-left"></span> Back</button>
      </form>
      
    </div>
    </header>
</div>

<div class="container">
    <div class="panel panel-default">
      <!-- Default panel contents -->
        <table class="table">
          <thead>
            <th>Rank</th>
            <th>Username</th>
          </thead>
          <tbody>
            <% for(let i=1; i<activeMembers.length; i++){%>
              <tr>
                <form action="/discussion/<%=user.userName%>/<%= discussionID%>/remove" method="POST">
                  <td><%= i%></td>
                  <td><%= activeMembers[i]%></td>
                  <td>  
                        <input type="hidden" name="removedUser" value="<%= activeMembers[i]%>"/>

                        <button type="submit" class="btn btn-danger">Remove</button>
                  </td>
                </form>
              </tr>
            <%}%>
        </tbody>
        </table>
      </div>
  </div>

<%- include("partials/footer.ejs") -%>
